    <!-- auto-scroll left ratio (% of screen width) -->
    <integer name="sltw_autoScrollRatioLeft">20</integer>
    
    <!-- auto-scroll right ratio (% of screen width) -->
    <integer name="sltw_autoScrollRatioRight">85</integer>
    
    <!-- auto-scroll margin (% of screen width) -->
    <integer name="sltw_autoScrollMargin">25</integer>
    
